{
  "openapi": "3.0.0",
  "info": {
    "title": "Flask Terraform API",
    "description": "API to manage Terraform infrastructure",
    "version": "1.0.0"
  },
  "tags": [
  {
    "name": "Terraform",
    "description": "Endpoints to launch and manage EC2/OpenStack infrastructure using Terraform"
  },
  {
    "name": "Fedora Setup",
    "description": "Endpoints to configure Fedora servers via Ansible"
  },
  {
    "name": "Model Notebook Local",
    "description": "Upload and monitor local Jupyter notebook deployments"
  },
  {
    "name": "Model Notebook S3",
    "description": "Upload and track versioned Jupyter notebooks using AWS S3"
  }
],
  "paths": {
    "/terraform/ec2": {
      "post": {
        "tags": ["Terraform"],
        "summary": "Launch an EC2 instance using Terraform",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "EC2 instance launched",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": { "type": "string" },
                    "public_ip": { "type": "string" },
                    "vpc_id": { "type": "string" },
                    "subnet_id": { "type": "string" }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/terraform/openstack": {
      
      "post": {
        "tags": ["Terraform"],
        "summary": "Launch an OpenStack instance using Terraform",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OpenStack instance launched",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": { "type": "string" },
                    "public_ip": { "type": "string" },
                    "vpc_id": { "type": "string" },
                    "subnet_id": { "type": "string" }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/terraform/status": {
      
      "get": {
        "tags": ["Terraform"],
        "summary": "Get instance status",
        "responses": {
          "200": {
            "description": "Instance details",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "public_ip": { "type": "string" },
                    "vpc_id": { "type": "string" },
                    "subnet_id": { "type": "string" }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/launch": {
      "get": {
        "summary": "Launch instance in browser",
        "responses": {
          "302": {
            "description": "Redirect to the launched instance"
          }
        }
      }
    },
    "/deploy/fedora": {
      "post": {
        "tags": ["Fedora Setup"],
        "summary": "Deploy Fedora Server with Ansible",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "server_ip": { "type": "string" },
                  "ssh_user": { "type": "string" },
                  "ssh_password": { "type": "string" },
                  "libraries": {
                    "type": "array",
                    "items": { "type": "string" }
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Fedora server deployed successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": { "type": "string" , "default": "10.156.115.33"},
                    "redirect_url": { "type": "string" }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/redirect/jupyter": {
      
      "get": {
        "tags": ["Fedora Setup"],
        "summary": "Redirect to Jupyter Notebook on the deployed Fedora Server",
        "parameters": [
          {
            "name": "server_ip",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "302": {
            "description": "Redirect to Jupyter Notebook"
          }
        }
      }
    },
    "/test/local": {
      
      "post": {
        "tags": ["Fedora Setup"],
        "summary": "Run a Jupyter Notebook locally",
        "requestBody": {
          "required": true,
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "notebook_file": {
                    "type": "string",
                    "format": "binary",
                    "description": "The Jupyter Notebook (.ipynb) file to be executed locally."
                  },
                  "model_name": {
                    "type": "string",
                    "description": "The name of the model to be tested within the notebook."
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Notebook executed successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": { "type": "string" },
                    "executed_notebook": { "type": "string", "description": "Download URL for the executed notebook." }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Invalid request data"
          },
          "500": {
            "description": "Error executing the notebook"
          }
        }
      }
    },
    "/model/upload": {
      
      "post": {
        "tags": ["Model Notebook Local"],
        "summary": "Upload a local model notebook",
        "requestBody": {
          "required": true,
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "model_name": {
                    "type": "string",
                    "description": "The name of the model"
                  },
                  "model_description": {
                    "type": "string",
                    "description": "Description of the model"
                  },
                  "model_version": {
                    "type": "string",
                    "description": "Version of the model"
                  },
                  "model_file": {
                    "type": "string",
                    "format": "binary",
                    "description": "Notebook file (.ipynb)"
                  }
                },
                "required": ["model_name", "model_description", "model_file"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Model uploaded successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": { "type": "string" },
                    "model_name": { "type": "string" },
                    "version": { "type": "string" },
                    "notebook_url": { "type": "string" }
                  }
                }
              }
            }
          },
          "404": {
            "description": "Failed to Upload",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": { "type": "string" },
                    "model_name": { "type": "string" },
                    "version": { "type": "string" },
                    "notebook_url": { "type": "string" }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/model/status": {
      
      "get": {
        "tags": ["Model Notebook Local"],
        "summary": "Check deployment status of a local model",
        "parameters": [
          {
            "name": "model_name",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "environment",
            "in": "query",
            "required": false,
            "schema": {
              "type": "string",
              "default": "Development"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Deployment status of the model",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "model_name": { "type": "string" },
                    "status": { "type": "string" },
                    "environment": { "type": "string" },
                    "version": { "type": "string" }
                  }
                }
              }
            }
          },
          "404": {
            "description": "Model not found or notebook missing",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties":{
                    "model_name": { "type": "string" },
                    "status": { "type": "string" },
                    "environment": { "type": "string" },
                    "version": { "type": "string" }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/model/upload/s3": {
      
      "post": {
        "tags": ["Model Notebook S3"],
        "summary": "Upload model notebook to AWS S3 with versioning",
        "requestBody": {
          "required": true,
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "model_name": {
                    "type": "string",
                    "description": "Model name"
                  },
                  "model_description": {
                    "type": "string",
                    "description": "Description"
                  },
                  "model_version": {
                    "type": "string",
                    "description": "Model version"
                  },
                  "model_file": {
                    "type": "string",
                    "format": "binary",
                    "description": "Notebook file to upload (.ipynb)"
                  }
                },
                "required": ["model_name", "model_description", "model_file"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Model uploaded to S3",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": { "type": "string" },
                    "model_name": { "type": "string" },
                    "version": { "type": "string" },
                    "s3_key": { "type": "string" },
                    "version_id": { "type": "string" }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/model/status/s3": {
      "get": {
        "tags": ["Model Notebook S3"],
        "summary": "Check deployment status of a model in S3",
        "parameters": [
          {
            "name": "model_name",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "environment",
            "in": "query",
            "required": false,
            "schema": {
              "type": "string",
              "default": "Development"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Deployment status of the S3 model",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "model_name": { "type": "string" },
                    "status": { "type": "string" },
                    "environment": { "type": "string" },
                    "s3_key": { "type": "string" },
                    "version_id": { "type": "string" }
                  }
                }
              }
            }
          }
        }
      }
    }

  }
}
